<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@id/card_info" layout="@layout/commerce_info_header" />
    <LinearLayout android:orientation="vertical" android:id="@id/commerce_payment_shipping_loading_layout" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.twitter.ui.widget.TypefacesTextView android:textSize="@dimen/font_size_medium" android:textStyle="bold" android:textColor="@color/text" android:gravity="center" android:id="@id/commerce_payment_shipping_loading" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/commerce_card_title_padding" android:text="@string/loading" android:lineSpacingExtra="@dimen/line_spacing_extra" />
        <com.twitter.ui.widget.TypefacesTextView android:textSize="@dimen/font_size_medium" android:textColor="@color/secondary_text" android:gravity="center" android:id="@id/commerce_payment_shipping_loading_subtext" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/commerce_profile_summary_padding_bottom" android:text="@string/loading" />
        <ProgressBar android:layout_gravity="center" android:id="@id/commerce_loading_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?android:attr/progressBarStyleLarge" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/commerce_payment_shipping_main_layout" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/commerce_info_padding" android:layout_marginTop="@dimen/commerce_info_card_padding" android:layout_marginRight="@dimen/commerce_info_padding" android:layout_marginBottom="@dimen/commerce_info_card_padding">
            <ImageView android:layout_gravity="left" android:orientation="vertical" android:id="@id/commerce_cc_image" android:paddingLeft="@dimen/commerce_info_padding" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/commerce_card_amex" android:scaleType="centerCrop" android:contentDescription="@null" />
            <TextView android:textSize="@dimen/commerce_font_size_xlarge" android:textColor="@color/primary_text" android:layout_gravity="bottom|center|left" android:id="@id/commerce_card_number" android:paddingLeft="@dimen/commerce_info_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Card ending in 2008" android:singleLine="true" android:includeFontPadding="false" />
        </LinearLayout>
        <include android:id="@id/shipping_info" layout="@layout/commerce_info_header" />
        <LinearLayout android:orientation="horizontal" android:id="@id/commerce_profile_address_container" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/commerce_summary_title_top_margin_address" android:layout_marginBottom="@dimen/commerce_info_card_padding">
            <ImageView android:layout_gravity="center|left|top" android:orientation="vertical" android:id="@id/commerce_shipping_icon" android:paddingLeft="@dimen/commerce_info_padding" android:focusable="false" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/commerce_info_padding" android:src="@drawable/ic_commerce_shipping" android:scaleType="centerCrop" android:contentDescription="@null" />
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/commerce_font_size_xlarge" android:textColor="@color/text" android:gravity="left" android:layout_gravity="top" android:id="@id/commerce_address_full" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/commerce_card_title_padding" android:layout_marginRight="@dimen/commerce_card_title_padding" android:text="sample text" android:includeFontPadding="false" />
                <TextView android:textSize="@dimen/commerce_font_size_xlarge" android:textColor="@color/text" android:gravity="left" android:layout_gravity="top" android:id="@id/commerce_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/commerce_card_title_padding" android:layout_marginRight="@dimen/commerce_card_title_padding" android:layout_marginBottom="@dimen/commerce_summary_title_bottom_margin_address" android:text="@string/commerce_address_email" android:includeFontPadding="false" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@id/commerce_payment_address_edit_group" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <com.twitter.ui.widget.TypefacesTextView android:textColor="@color/link" android:gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/commerce_card_title_padding" android:layout_marginTop="@dimen/commerce_summary_edit_top_edit_margin" android:layout_marginBottom="@dimen/commerce_card_title_padding" android:text="@string/commerce_payment_shipping_edit_long" android:includeFontPadding="false" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/commerce_payment_address_delete_group" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <com.twitter.ui.widget.TypefacesTextView android:textColor="@color/link" android:gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/commerce_edit_card_padding" android:text="@string/commerce_payment_shipping_delete_long" android:includeFontPadding="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/commerce_payment_offers_main_layout" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <include android:id="@id/offers_cards_info" layout="@layout/commerce_info_header" />
        <LinearLayout android:orientation="vertical" android:background="@color/section_divider_color" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <LinearLayout android:orientation="vertical" android:id="@id/commerce_registered_payment_nux" android:background="@color/app_background" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <com.twitter.ui.widget.TypefacesTextView android:textSize="@dimen/font_size_medium" android:textStyle="bold" android:textColor="@color/text" android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/commerce_card_title_padding" android:text="@string/commerce_registered_card_nux_title" android:lineSpacingExtra="@dimen/line_spacing_extra" />
                <com.twitter.ui.widget.TypefacesTextView android:textSize="@dimen/font_size_medium" android:textColor="@color/secondary_text" android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/commerce_profile_summary_padding_bottom" android:text="@string/commerce_registered_card_nux_subtitle" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/commerce_offers_cards_list" android:background="@color/app_background" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/commerce_info_padding" android:layout_marginRight="@dimen/commerce_info_padding" android:layout_marginBottom="@dimen/commerce_info_card_padding" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>