        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <ImageView android:id="@id/moments_bolt" android:visibility="visible" android:contentDescription="@null" style="@style/MomentsCardBolt.RtlAware" />
            <com.twitter.ui.widget.TypefacesTextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/moments_title" style="@style/MomentsGuideText.Secondary.White" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>