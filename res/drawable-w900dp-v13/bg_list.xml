<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/list_horizontal_padding" android:color="@color/list_margin_bg" />
            <padding android:left="@dimen/list_horizontal_padding" android:right="@dimen/list_horizontal_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/list_margin_bg" />
            <padding android:left="-1.0px" android:right="-1.0px" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2.0px" android:color="@color/border_color" />
            <padding android:left="1.0px" android:right="1.0px" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/app_background" />
        </shape>
    </item>
</layer-list>